<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alextcy.redisguitool.Controller.AddConnectionConfigDialogController">
    <children>
        <VBox alignment="CENTER" layoutX="131.0" layoutY="50.0" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
            <children>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" minWidth="100.0" text="Name" />
                        <TextField fx:id="configName" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" minWidth="100.0" text="Host" />
                        <TextField fx:id="configHost" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" minWidth="100.0" text="Port" />
                        <TextField fx:id="configPort" HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" minWidth="100.0" text="Password" />
                        <TextField fx:id="configPassword" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" minWidth="100.0" text="SSH Tunnel" />
                        <CheckBox fx:id="sshTunnelCheckbox" HBox.hgrow="ALWAYS" selected="false" />
                    </children>
                </HBox>
                
                <VBox fx:id="sshTunnelBlock" disable="true" alignment="CENTER">
                    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                        <children>
                            <Label alignment="CENTER_RIGHT" minWidth="100.0" text="SSH host" />
                            <TextField fx:id="sshHost" HBox.hgrow="ALWAYS" />
                        </children>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                        <children>
                            <Label alignment="CENTER_RIGHT" minWidth="100.0" text="SSH User" />
                            <TextField fx:id="sshUser" HBox.hgrow="ALWAYS" />
                        </children>
                    </HBox>
                    
                    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                        <children>
                            <Label alignment="CENTER_RIGHT" minWidth="100.0" text="SSH Password" />
                            <TextField fx:id="sshPassword" HBox.hgrow="ALWAYS" />
                        </children>
                    </HBox>
                    
                    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                        <children>
                            <Label alignment="CENTER_RIGHT" minWidth="100.0" text="SSH Port" />
                            <TextField fx:id="sshPort" HBox.hgrow="ALWAYS" />
                        </children>
                    </HBox>
                </VBox> 
                
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onAddConnectionConfig"  text="Save" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
